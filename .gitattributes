# Set default behavior to automatically normalize line endings
* text=auto eol=lf

# Source code - force LF
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.less text eol=lf
*.html text eol=lf
*.htm text eol=lf
*.xml text eol=lf
*.svg text eol=lf
*.md text eol=lf
*.mdx text eol=lf
*.txt text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf

# Config files
*.config.js text eol=lf
*.config.ts text eol=lf
.editorconfig text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.prettierrc text eol=lf
.eslintrc text eol=lf
.npmrc text eol=lf

# Shell scripts - force LF
*.sh text eol=lf
*.bash text eol=lf

# Windows batch files - force CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files - no conversion
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary

# Lock files
pnpm-lock.yaml text eol=lf
package-lock.json text eol=lf
yarn.lock text eol=lf
