{
  "name": "storefront",
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "dev": "tsx scripts/build-sw.ts && tsx server/dev.ts",
    "build": "tsx scripts/build-sw.ts && vite build && vite build --ssr src/server/entry-server.ts --outDir dist/server",
    "preview": "tsx server/prod.ts",
    "serve": "tsx server/prod.ts",
    "test": "vitest run",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@philjs/core": "workspace:*",
    "@philjs/router": "workspace:*",
    "@philjs/ssr": "workspace:*",
    "@philjs/islands": "workspace:*",
    "@philjs/ai": "workspace:*",
    "@philjs/devtools": "workspace:*",
    "@philjs/compiler": "workspace:*"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^25.0.0",
    "esbuild": "^0.27.2",
    "tsx": "^4.19.1",
    "typescript": "6.0.0-dev.20251230",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "playwright": "^1.48.0"
  }
}


