{
  "name": "philjs-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "build": "pnpm -r --filter {packages/*} run build && pnpm --filter {examples/storefront} build",
    "dev": "pnpm --filter examples/storefront dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "release": "changeset publish",
    "bench": "pnpm --filter philjs-core vitest bench",
    "bench:save": "node scripts/benchmark.js --save",
    "check:budgets": "node --no-warnings scripts/check-budgets.mjs",
    "verify:treeshake": "node --no-warnings scripts/verify-tree-shaking.mjs",
    "fix:sideeffects": "node scripts/add-side-effects.mjs",
    "size": "size-limit",
    "size:why": "size-limit --why"
  },
  "workspaces": [
    "packages/*",
    "packages/philjs-devtools-extension",
    "examples/*",
    "docs-site"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@playwright/test": "^1.57.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.1.4",
    "@size-limit/esbuild": "^12.0.0",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@types/node": "^20.11.0",
    "eslint": "^9.39.2",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-security": "^3.0.1",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "rollup": "^4.53.5",
    "size-limit": "^12.0.0",
    "terser": "^5.44.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "vitest": "^3.2.4"
  }
}
