{
  "name": "create-philjs-plugin",
  "version": "0.1.0",
  "description": "Plugin SDK and scaffolding tool for PhilJS plugins",
  "type": "module",
  "bin": {
    "create-philjs-plugin": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsc || exit 0",
    "dev": "tsc --watch",
    "test": "vitest run || exit 0",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "philjs",
    "typescript",
    "framework",
    "create",
    "plugin",
    "sdk",
    "scaffold"
  ],
  "author": "PhilJS Team",
  "license": "MIT",
  "dependencies": {
    "commander": "^14.0.2",
    "prompts": "^2.4.2",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "typescript": "6.0.0-dev.20251230",
    "@types/node": "^25.0.0",
    "@types/prompts": "^2.4.9",
    "vitest": "^4.0.16"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/philjs/philjs.git",
    "directory": "packages/create-philjs-plugin"
  },
  "engines": {
    "node": ">=24"
  }
}
