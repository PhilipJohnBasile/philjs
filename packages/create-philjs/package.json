  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist", "templates"],
  "scripts": {
    "build": "tsup src/cli.ts --format cjs,esm --dts",
    "dev": "tsup src/cli.ts --watch"
