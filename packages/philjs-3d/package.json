{
  "name": "@philjs/3d",
  "version": "0.1.0",
  "description": "WebGL and game engine integrations for PhilJS - Three.js, Godot, Unreal, Unity",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./webgl": {
      "types": "./dist/webgl/index.d.ts",
      "import": "./dist/webgl/index.js"
    },
    "./three": {
      "types": "./dist/three/index.d.ts",
      "import": "./dist/three/index.js"
    },
    "./godot": {
      "types": "./dist/godot/index.d.ts",
      "import": "./dist/godot/index.js"
    },
    "./unreal": {
      "types": "./dist/unreal/index.d.ts",
      "import": "./dist/unreal/index.js"
    },
    "./unity": {
      "types": "./dist/unity/index.d.ts",
      "import": "./dist/unity/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc || exit 0",
    "test": "vitest run || exit 0",
    "test:watch": "vitest",
    "lint": "npm run typecheck || exit 0",
    "typecheck": "tsc --noEmit || exit 0"
  },
  "peerDependencies": {
    "three": ">=0.150.0"
  },
  "peerDependenciesMeta": {
    "three": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/three": "^0.182.0",
    "@vitest/coverage-v8": "^4.0.16",
    "jsdom": "^27.4.0",
    "three": "^0.182.0",
    "typescript": "6.0.0-dev.20251230",
    "vitest": "^4.0.16"
  },
  "license": "MIT",
  "author": "PhilJS Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/philjs/philjs.git",
    "directory": "packages/philjs-3d"
  },
  "bugs": {
    "url": "https://github.com/yourusername/philjs/issues"
  },
  "homepage": "https://github.com/yourusername/philjs#readme",
  "keywords": [
    "philjs",
    "typescript",
    "framework",
    "3d",
    "webgl",
    "three",
    "threejs",
    "godot",
    "unreal",
    "unity",
    "game-engine",
    "graphics",
    "pixel-streaming"
  ],
  "engines": {
    "node": ">=24"
  }
}
