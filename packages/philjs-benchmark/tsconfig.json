{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "jsx": "react-jsx",
    "jsxImportSource": "@philjs/core"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
