{
  "name": "@philjs/build",
  "version": "0.1.0",
  "description": "Rspack/Rslib build toolchain for PhilJS with Module Federation support",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "bin": {
    "philjs-build": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./rspack": {
      "types": "./dist/rspack/index.d.ts",
      "import": "./dist/rspack/index.js"
    },
    "./rslib": {
      "types": "./dist/rslib/index.d.ts",
      "import": "./dist/rslib/index.js"
    },
    "./vite": {
      "types": "./dist/vite/index.d.ts",
      "import": "./dist/vite/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "vitest run",
    "lint": "echo 'Lint philjs-build'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@rspack/core": "^1.1.0",
    "@rslib/core": "^0.3.0",
    "commander": "^14.0.2",
    "chalk": "^5.6.2"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "rollup": "^4.54.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "vite": "^7.3.0"
  },
  "peerDependencies": {
    "vite": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  },
  "license": "MIT",
  "author": "PhilJS Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/philjs.git",
    "directory": "packages/philjs-build"
  },
  "bugs": {
    "url": "https://github.com/yourusername/philjs/issues"
  },
  "homepage": "https://github.com/yourusername/philjs#readme",
  "keywords": [
    "philjs",
    "rspack",
    "rslib",
    "build",
    "bundler",
    "module-federation"
  ],
  "engines": {
    "node": ">=24"
  }
}
