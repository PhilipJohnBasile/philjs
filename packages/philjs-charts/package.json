{
  "name": "@philjs/charts",
  "version": "0.1.0",
  "description": "Signal-based chart components for PhilJS with real-time updates and responsive sizing",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks.d.ts",
      "import": "./dist/hooks.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "lint": "echo 'Lint philjs-charts'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "recharts": "^2.12.0",
    "d3": "^7.9.0",
    "chart.js": "^4.4.1",
    "@philjs/core": "workspace:*"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@vitest/coverage-v8": "^4.0.16",
    "jsdom": "^27.4.0",
    "rollup": "^4.54.0",
    "typescript": "6.0.0-dev.20251230",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "@philjs/core": "workspace:*"
  },
  "license": "MIT",
  "author": "PhilJS Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/philjs.git",
    "directory": "packages/philjs-charts"
  },
  "bugs": {
    "url": "https://github.com/yourusername/philjs/issues"
  },
  "homepage": "https://github.com/yourusername/philjs#readme",
  "keywords": [
    "philjs",
    "charts",
    "signals",
    "recharts",
    "d3",
    "chart.js",
    "visualization",
    "real-time"
  ],
  "engines": {
    "node": ">=24"
  }
}

