                <title>{title} " | {{name}}"</title>
                <link rel="stylesheet" href="/static/styles.css" />
            </head>
            <body>
                <header class="header">
                    <nav class="nav">
                        <a href="/" class="logo">"{{name}}"</a>
                        <ul class="nav-links">
                            <li><a href="/">"Home"</a></li>
                            <li><a href="/dashboard">"Dashboard"</a></li>
                            <li><a href="/login">"Login"</a></li>
                        </ul>
                    </nav>
