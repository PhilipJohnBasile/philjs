[package]
name = "{{name}}"
version = "0.1.0"
edition = "2021"
authors = ["{{author}}"]
description = "A PhilJS SSR application"

[lib]
crate-type = ["cdylib", "rlib"]

[[bin]]
name = "{{name}}"
path = "src/main.rs"

[dependencies]
philjs = "2.0"
philjs-axum = "2.0"
axum = "0.7"
tokio = { version = "1", features = ["full"] }
tower = "0.4"
tower-http = { version = "0.5", features = ["cors", "compression-gzip", "fs"] }
serde = { version = "1", features = ["derive"] }
serde_json = "1"
tracing = "0.1"
tracing-subscriber = { version = "0.3", features = ["env-filter"] }

[target.'cfg(target_arch = "wasm32")'.dependencies]
wasm-bindgen = "0.2"
wasm-bindgen-futures = "0.4"
web-sys = { version = "0.3", features = [
    "Window",
    "Document",
    "Element",
    "HtmlElement",
    "Event",
    "MouseEvent",
    "console",
]}

[features]
default = ["ssr"]
ssr = ["philjs/ssr"]
hydration = ["philjs/hydration"]

[profile.release]
opt-level = "z"
lto = true
codegen-units = 1
panic = "abort"
strip = true

[profile.dev]
opt-level = 0
debug = true
