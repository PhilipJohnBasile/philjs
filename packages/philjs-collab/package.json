{
  "name": "@philjs/collab",
  "version": "0.1.0",
  "description": "Real-time collaborative state sync for PhilJS - Presence, CRDTs, Cursors, Operational Transforms",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./presence": {
      "types": "./dist/presence.d.ts",
      "import": "./dist/presence.js"
    },
    "./crdt": {
      "types": "./dist/crdt.d.ts",
      "import": "./dist/crdt.js"
    },
    "./cursors": {
      "types": "./dist/cursors.d.ts",
      "import": "./dist/cursors.js"
    },
    "./ot": {
      "types": "./dist/ot.d.ts",
      "import": "./dist/ot.js"
    },
    "./awareness": {
      "types": "./dist/awareness.d.ts",
      "import": "./dist/awareness.js"
    },
    "./transport": {
      "types": "./dist/transport.d.ts",
      "import": "./dist/transport.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/presence.ts src/crdt.ts src/cursors.ts src/ot.ts src/awareness.ts src/transport.ts --format esm --dts",
    "dev": "tsup src/*.ts --format esm --dts --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "philjs-core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "philjs",
    "collaborative",
    "real-time",
    "crdt",
    "presence",
    "cursors",
    "operational-transform",
    "sync"
  ],
  "license": "MIT"
}
