{
  "name": "@philjs/collab",
  "version": "0.1.0",
  "description": "Collaborative state management - CRDT-based real-time collaboration like Figma/Notion",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --watch",
    "test": "vitest"
  },
  "keywords": [
    "philjs",
    "collaboration",
    "crdt",
    "real-time",
    "multiplayer",
    "presence",
    "figma",
    "notion"
  ],
  "author": "PhilJS Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
