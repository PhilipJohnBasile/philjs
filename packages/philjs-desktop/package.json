{
  "name": "@philjs/desktop",
  "version": "0.1.0",
  "description": "Desktop application development for PhilJS using Tauri",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "philjs-desktop": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./tauri": {
      "types": "./dist/tauri/index.d.ts",
      "import": "./dist/tauri/index.js"
    },
    "./window": {
      "types": "./dist/window.d.ts",
      "import": "./dist/window.js"
    },
    "./system": {
      "types": "./dist/system/index.d.ts",
      "import": "./dist/system/index.js"
    },
    "./ipc": {
      "types": "./dist/ipc.d.ts",
      "import": "./dist/ipc.js"
    },
    "./lifecycle": {
      "types": "./dist/lifecycle.d.ts",
      "import": "./dist/lifecycle.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    },
    "./electron": {
      "types": "./dist/electron/index.d.ts",
      "import": "./dist/electron/index.js"
    }
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "echo 'Lint philjs-desktop'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/cli": "^2.0.0",
    "@tauri-apps/plugin-autostart": "^2.0.0",
    "@tauri-apps/plugin-clipboard-manager": "^2.0.0",
    "@tauri-apps/plugin-dialog": "^2.0.0",
    "@tauri-apps/plugin-fs": "^2.0.0",
    "@tauri-apps/plugin-http": "^2.0.0",
    "@tauri-apps/plugin-notification": "^2.0.0",
    "@tauri-apps/plugin-os": "^2.0.0",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "@tauri-apps/plugin-global-shortcut": "^2.0.0",
    "@tauri-apps/plugin-process": "^2.0.0",
    "@tauri-apps/plugin-updater": "^2.0.0",
    "commander": "^12.0.0",
    "@philjs/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@tauri-apps/api": ">=2.0.0",
    "@tauri-apps/plugin-autostart": ">=2.0.0",
    "@tauri-apps/plugin-clipboard-manager": ">=2.0.0",
    "@tauri-apps/plugin-dialog": ">=2.0.0",
    "@tauri-apps/plugin-fs": ">=2.0.0",
    "@tauri-apps/plugin-http": ">=2.0.0",
    "@tauri-apps/plugin-notification": ">=2.0.0",
    "@tauri-apps/plugin-os": ">=2.0.0",
    "@tauri-apps/plugin-shell": ">=2.0.0",
    "@tauri-apps/plugin-global-shortcut": ">=2.0.0",
    "@tauri-apps/plugin-process": ">=2.0.0",
    "@tauri-apps/plugin-updater": ">=2.0.0"
  },
  "peerDependenciesMeta": {
    "@tauri-apps/api": {
      "optional": true
    },
    "@tauri-apps/plugin-autostart": {
      "optional": true
    },
    "@tauri-apps/plugin-clipboard-manager": {
      "optional": true
    },
    "@tauri-apps/plugin-dialog": {
      "optional": true
    },
    "@tauri-apps/plugin-fs": {
      "optional": true
    },
    "@tauri-apps/plugin-http": {
      "optional": true
    },
    "@tauri-apps/plugin-notification": {
      "optional": true
    },
    "@tauri-apps/plugin-os": {
      "optional": true
    },
    "@tauri-apps/plugin-shell": {
      "optional": true
    },
    "@tauri-apps/plugin-global-shortcut": {
      "optional": true
    },
    "@tauri-apps/plugin-process": {
      "optional": true
    },
    "@tauri-apps/plugin-updater": {
      "optional": true
    }
  },
  "license": "MIT",
  "author": "PhilJS Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/philjs.git",
    "directory": "packages/philjs-desktop"
  },
  "bugs": {
    "url": "https://github.com/yourusername/philjs/issues"
  },
  "homepage": "https://github.com/yourusername/philjs#readme",
  "keywords": [
    "philjs",
    "desktop",
    "tauri",
    "electron",
    "cross-platform",
    "native"
  ]
}
