{
  "manifest_version": 2,
  "name": "PhilJS DevTools",
  "version": "1.0.0",
  "description": "Official browser DevTools extension for debugging PhilJS applications",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "<all_urls>",
    "storage"
  ],
  "devtools_page": "devtools.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["background-firefox.js"]
  },
  "web_accessible_resources": ["inject.js"],
  "browser_specific_settings": {
    "gecko": {
      "id": "philjs-devtools@philjs.dev",
      "strict_min_version": "57.0"
    }
  }
}
