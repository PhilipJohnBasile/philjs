{
  "manifest_version": 3,
  "name": "PhilJS DevTools",
  "version": "0.0.1",
  "description": "Developer tools for PhilJS - inspect signals, components, and performance",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "devtools_page": "devtools.html",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/detector.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["content/hook.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
