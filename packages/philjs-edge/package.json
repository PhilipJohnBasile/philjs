{
  "name": "@philjs/edge",
  "version": "0.1.0",
  "description": "Edge computing primitives for PhilJS - KV storage, Durable Objects, queues, cron",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./kv": {
      "types": "./dist/kv.d.ts",
      "import": "./dist/kv.js"
    },
    "./durable": {
      "types": "./dist/durable.d.ts",
      "import": "./dist/durable.js"
    },
    "./queue": {
      "types": "./dist/queue.d.ts",
      "import": "./dist/queue.js"
    },
    "./d1": {
      "types": "./dist/d1.d.ts",
      "import": "./dist/d1.js"
    },
    "./geo-routing": {
      "types": "./dist/geo-routing.d.ts",
      "import": "./dist/geo-routing.js"
    },
    "./prefetch": {
      "types": "./dist/prefetch.d.ts",
      "import": "./dist/prefetch.js"
    },
    "./streaming": {
      "types": "./dist/streaming.d.ts",
      "import": "./dist/streaming.js"
    },
    "./state-replication": {
      "types": "./dist/state-replication.d.ts",
      "import": "./dist/state-replication.js"
    },
    "./smart-cache": {
      "types": "./dist/smart-cache.d.ts",
      "import": "./dist/smart-cache.js"
    }
  },
  "scripts": {
    "build": "tsc || exit 0",
    "dev": "tsc --watch",
    "test": "vitest run || exit 0",
    "typecheck": "tsc --noEmit || exit 0"
  },
  "dependencies": {
    "@philjs/core": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251225.0",
    "typescript": "6.0.0-dev.20251230",
    "vitest": "^4.0.16"
  },
  "keywords": [
    "philjs",
    "typescript",
    "framework",
    "edge",
    "cloudflare",
    "workers",
    "kv",
    "durable-objects",
    "d1"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=24"
  },
  "author": "PhilJS Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/philjs/philjs.git",
    "directory": "packages/philjs-edge"
  }
}
