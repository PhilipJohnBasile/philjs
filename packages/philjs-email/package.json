{
  "name": "@philjs/email",
  "version": "0.1.0",
  "description": "Email client for PhilJS - multiple providers, templates, queue integration",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./providers/*": {
      "types": "./dist/providers/*.d.ts",
      "default": "./dist/providers/*.js"
    }
  },
  "files": ["dist", "src"],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "lint": "eslint src/"
  },
  "keywords": ["philjs", "email", "nodemailer", "sendgrid", "resend", "ses"],
  "author": "PhilJS Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-ses": "^3.400.0",
    "@sendgrid/mail": "^8.1.0",
    "nodemailer": "^7.0.12",
    "resend": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "@types/nodemailer": "^6.4.14",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "@philjs/core": ">=0.1.0"
  },
  "engines": {
    "node": ">=24"
  }
}
