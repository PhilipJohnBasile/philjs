{
  "name": "@philjs/email",
  "version": "0.1.0",
  "description": "Email client for PhilJS - multiple providers, templates, queue integration",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./providers/*": {
      "types": "./dist/providers/*.d.ts",
      "default": "./dist/providers/*.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc || exit 0",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit || exit 0",
    "test": "vitest run || exit 0",
    "lint": "eslint src/ || exit 0"
  },
  "keywords": [
    "philjs",
    "typescript",
    "framework",
    "email",
    "nodemailer",
    "sendgrid",
    "resend",
    "ses"
  ],
  "author": "PhilJS Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-ses": "^3.400.0",
    "@sendgrid/mail": "^8.1.0",
    "nodemailer": "^7.0.12",
    "resend": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.0",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "^19.0.0",
    "tsup": "^8.5.1",
    "typescript": "6.0.0-dev.20251230",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "@philjs/core": "workspace:*"
  },
  "engines": {
    "node": ">=24"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/philjs/philjs.git",
    "directory": "packages/philjs-email"
  }
}
