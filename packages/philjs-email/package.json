{
  "name": "@philjs/email",
  "version": "0.0.1",
  "description": "Production-ready email client for PhilJS with multiple providers, templates, and queue integration",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./providers/*": {
      "import": "./dist/providers/*.mjs",
      "require": "./dist/providers/*.js",
      "types": "./dist/providers/*.d.ts"
    },
    "./templates/*": {
      "import": "./dist/templates/*.mjs",
      "require": "./dist/templates/*.js",
      "types": "./dist/templates/*.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsup src/index.ts --format cjs,esm --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "email",
    "philjs",
    "nodemailer",
    "sendgrid",
    "mailgun",
    "resend",
    "ses",
    "react-email",
    "templates"
  ],
  "author": "PhilJS Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-ses": "^3.400.0",
    "@react-email/components": "^0.0.12",
    "@sendgrid/mail": "^8.1.0",
    "form-data": "^4.0.0",
    "formdata-node": "^6.0.3",
    "mailgun.js": "^9.3.0",
    "nodemailer": "^6.9.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "resend": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/philjs/philjs.git",
    "directory": "packages/philjs-email"
  }
}
