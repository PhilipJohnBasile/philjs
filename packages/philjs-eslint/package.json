{
  "name": "eslint-plugin-philjs",
  "version": "0.1.0",
  "description": "ESLint plugin for PhilJS - Detect anti-patterns and optimize signal usage",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "philjs",
    "signals",
    "reactivity",
    "linting"
  ],
  "peerDependencies": {
    "eslint": "^8.0.0 || ^9.0.0"
  },
  "dependencies": {
    "@typescript-eslint/utils": "^8.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^8.0.0",
    "@typescript-eslint/rule-tester": "^8.0.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false
}
