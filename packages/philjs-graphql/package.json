{
  "name": "@philjs/graphql",
  "version": "0.1.0",
  "description": "GraphQL integration for PhilJS with typed queries and mutations",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin @rollup/plugin-typescript || exit 0",
    "test": "vitest run || exit 0",
    "lint": "npm run typecheck || exit 0",
    "typecheck": "tsc --noEmit || exit 0"
  },
  "dependencies": {
    "@philjs/core": "workspace:*",
    "@philjs/ssr": "workspace:*"
  },
  "devDependencies": {
    "graphql": "^16.12.0",
    "@graphql-tools/schema": "^10.0.4",
    "@graphql-tools/utils": "^10.5.7",
    "vitest": "^4.0.16",
    "typescript": "6.0.0-dev.20251230",
    "rollup": "^4.54.0"
  },
  "peerDependencies": {
    "graphql": "^16.12.0"
  },
  "sideEffects": false,
  "license": "MIT",
  "author": "PhilJS Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/philjs/philjs.git",
    "directory": "packages/philjs-graphql"
  },
  "bugs": {
    "url": "https://github.com/yourusername/philjs/issues"
  },
  "homepage": "https://github.com/yourusername/philjs#readme",
  "engines": {
    "node": ">=24"
  },
  "keywords": [
    "philjs",
    "typescript",
    "framework",
    "graphql"
  ]
}
