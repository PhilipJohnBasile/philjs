{
  "name": "@philjs/html",
  "version": "0.1.0",
  "description": "HTML-first reactive framework for PhilJS - declarative attributes, progressive enhancement",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./attributes": {
      "types": "./dist/attributes.d.ts",
      "default": "./dist/attributes.js"
    },
    "./minimal": {
      "types": "./dist/minimal.d.ts",
      "default": "./dist/minimal.js"
    }
  },
  "files": ["dist", "src"],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "lint": "eslint src/"
  },
  "keywords": [
    "philjs",
    "html-first",
    "progressive-enhancement",
    "declarative",
    "reactive",
    "signals",
    "web-components"
  ],
  "author": "PhilJS Team",
  "license": "MIT",
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "@philjs/core": "workspace:*"
  },
  "engines": {
    "node": ">=24"
  }
}
