{
  "name": "philjs-i18n",
  "version": "0.1.0",
  "description": "Internationalization utilities for PhilJS",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./translator": {
      "types": "./dist/translator.d.ts",
      "import": "./dist/translator.js"
    },
    "./formatter": {
      "types": "./dist/formatter.d.ts",
      "import": "./dist/formatter.js"
    },
    "./detector": {
      "types": "./dist/detector.d.ts",
      "import": "./dist/detector.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "vitest run",
    "lint": "echo 'Lint philjs-i18n'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "philjs-core": "workspace:*"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "rollup": "^4.53.3",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "philjs",
    "i18n",
    "internationalization",
    "localization",
    "translation"
  ],
  "license": "MIT"
}
