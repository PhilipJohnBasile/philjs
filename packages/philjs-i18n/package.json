{
  "name": "@philjs/i18n",
  "version": "0.1.0",
  "description": "Internationalization utilities for PhilJS",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./translator": {
      "types": "./dist/translator.d.ts",
      "import": "./dist/translator.js"
    },
    "./formatter": {
      "types": "./dist/formatter.d.ts",
      "import": "./dist/formatter.js"
    },
    "./detector": {
      "types": "./dist/detector.d.ts",
      "import": "./dist/detector.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "test": "vitest run",
    "lint": "echo 'Lint philjs-i18n'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@philjs/core": "workspace:*"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "rollup": "^4.54.0",
    "typescript": "6.0.0-dev.20251230",
    "vitest": "^4.0.16"
  },
  "keywords": [
    "philjs",
    "i18n",
    "internationalization",
    "localization",
    "translation"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=24"
  }
}

