{
  "name": "@philjs/image",
  "version": "0.1.0",
  "description": "Image optimization for PhilJS with automatic format conversion, responsive sizing, and lazy loading",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "import": "./dist/vite.js"
    },
    "./image-service": {
      "types": "./dist/image-service.d.ts",
      "import": "./dist/image-service.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc || exit 0",
    "dev": "tsc --watch",
    "test": "vitest run --passWithNoTests"
  },
  "keywords": [
    "philjs",
    "typescript",
    "framework",
    "image",
    "optimization",
    "webp",
    "avif",
    "responsive",
    "lazy-loading"
  ],
  "dependencies": {
    "@philjs/core": "workspace:*"
  },
  "devDependencies": {
    "sharp": "^0.34.5",
    "blurhash": "^2.0.5",
    "vite": "^7.3.0",
    "@types/node": "^25.0.0",
    "typescript": "6.0.0-dev.20251230",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "sharp": "^0.34.5",
    "blurhash": "^2.0.5"
  },
  "peerDependenciesMeta": {
    "sharp": {
      "optional": true
    },
    "blurhash": {
      "optional": true
    }
  },
  "sideEffects": false,
  "license": "MIT",
  "author": "PhilJS Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/philjs/philjs.git",
    "directory": "packages/philjs-image"
  },
  "bugs": {
    "url": "https://github.com/yourusername/philjs/issues"
  },
  "homepage": "https://github.com/yourusername/philjs#readme",
  "engines": {
    "node": ">=24"
  }
}
