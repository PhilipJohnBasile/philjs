{
  "name": "@philjs/jobs",
  "version": "0.1.0",
  "description": "Background job processing and scheduling for PhilJS",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./queue": {
      "import": "./dist/queue.js",
      "types": "./dist/queue.d.ts"
    },
    "./scheduler": {
      "import": "./dist/scheduler.js",
      "types": "./dist/scheduler.d.ts"
    },
    "./monitor": {
      "import": "./dist/monitor.js",
      "types": "./dist/monitor.d.ts"
    },
    "./job": {
      "import": "./dist/job.js",
      "types": "./dist/job.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "philjs",
    "jobs",
    "background-jobs",
    "queue",
    "scheduler",
    "cron",
    "bullmq",
    "redis",
    "task-queue"
  ],
  "author": "PhilJS",
  "license": "MIT",
  "peerDependencies": {
    "bullmq": "^5.66.3",
    "ioredis": "^5.8.2"
  },
  "peerDependenciesMeta": {
    "bullmq": {
      "optional": true
    },
    "ioredis": {
      "optional": true
    }
  },
  "dependencies": {
    "cron-parser": "^4.9.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "bullmq": "^5.66.3",
    "ioredis": "^5.8.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=24"
  }
}
