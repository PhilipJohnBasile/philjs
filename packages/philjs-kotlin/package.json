{
  "name": "@philjs/kotlin",
  "version": "0.0.1",
  "description": "Kotlin bindings for PhilJS - Android native and Kotlin/JS development",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./android": {
      "types": "./dist/android.d.ts",
      "import": "./dist/android.js"
    },
    "./compose": {
      "types": "./dist/compose.d.ts",
      "import": "./dist/compose.js"
    }
  },
  "files": ["dist", "kotlin", "templates"],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "tsup": "^8.0.0",
    "typescript": "next",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@philjs/core": "workspace:*"
  },
  "keywords": ["philjs", "kotlin", "android", "compose", "jetpack", "native", "kmp", "multiplatform"],
  "license": "MIT",
  "author": "PhilJS Team"
}
