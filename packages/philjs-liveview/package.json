{
  "name": "@philjs/liveview",
  "version": "0.1.0",
  "type": "module",
  "description": "Server-driven UI for PhilJS - Phoenix LiveView-style real-time rendering",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "default": "./dist/server.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsup src/index.ts src/client.ts src/server.ts --format cjs,esm --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@philjs/core": "workspace:*",
    "@philjs/realtime": "workspace:*",
    "morphdom": "^2.7.2"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "tsup": "^8.5.1",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "@philjs/core": "workspace:*"
  },
  "keywords": [
    "philjs",
    "liveview",
    "phoenix",
    "server-driven",
    "realtime",
    "websocket",
    "spa",
    "ssr"
  ],
  "author": "PhilJS Team",
  "license": "MIT",
  "engines": {
    "node": ">=24"
  }
}
