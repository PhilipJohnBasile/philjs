{
  "name": "@philjs/meta",
  "version": "0.1.0",
  "description": "Next.js/SvelteKit-style meta-framework for PhilJS with file-based routing, SSR, and data loading",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "philjs-meta": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./router": {
      "types": "./dist/router/index.d.ts",
      "import": "./dist/router/index.js"
    },
    "./data": {
      "types": "./dist/data/index.d.ts",
      "import": "./dist/data/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js"
    },
    "./seo": {
      "types": "./dist/seo/index.d.ts",
      "import": "./dist/seo/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run --passWithNoTests"
  },
  "keywords": [
    "philjs",
    "meta-framework",
    "ssr",
    "ssg",
    "file-based-routing",
    "seo",
    "meta",
    "og",
    "opengraph",
    "twitter",
    "sitemap"
  ],
  "dependencies": {
    "@philjs/core": "workspace:*",
    "chokidar": "^5.0.0",
    "commander": "^11.1.0",
    "esbuild": "^0.27.2",
    "fast-glob": "^3.3.2",
    "picocolors": "^1.0.0",
    "sirv": "^2.0.4",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "@types/ws": "^8.5.10",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "sideEffects": false,
  "license": "MIT",
  "author": "PhilJS Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/philjs.git",
    "directory": "packages/philjs-meta"
  },
  "bugs": {
    "url": "https://github.com/yourusername/philjs/issues"
  },
  "homepage": "https://github.com/yourusername/philjs#readme",
  "engines": {
    "node": ">=24"
  }
}
