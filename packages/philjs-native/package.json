{
  "name": "@philjs/native",
  "version": "0.1.0",
  "description": "Cross-platform native development for PhilJS - iOS, Android, and Desktop",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./runtime": {
      "types": "./dist/runtime.d.ts",
      "default": "./dist/runtime.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "default": "./dist/components/index.js"
    },
    "./navigation": {
      "types": "./dist/navigation.d.ts",
      "default": "./dist/navigation.js"
    },
    "./capacitor": {
      "types": "./dist/capacitor/index.d.ts",
      "default": "./dist/capacitor/index.js"
    },
    "./tauri": {
      "types": "./dist/tauri/index.d.ts",
      "default": "./dist/tauri/index.js"
    },
    "./gestures": {
      "types": "./dist/gestures/index.d.ts",
      "default": "./dist/gestures/index.js"
    }
  },
  "bin": {
    "philjs-native": "./dist/cli.js"
  },
  "files": ["dist", "src", "templates"],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "lint": "eslint src/"
  },
  "keywords": [
    "philjs",
    "native",
    "mobile",
    "ios",
    "android",
    "desktop",
    "cross-platform",
    "capacitor",
    "tauri",
    "hybrid-app",
    "pwa"
  ],
  "author": "PhilJS Team",
  "license": "MIT",
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "@philjs/core": "workspace:*",
    "@capacitor/core": ">=5.0.0",
    "@tauri-apps/api": ">=1.5.0"
  },
  "peerDependenciesMeta": {
    "@capacitor/core": {
      "optional": true
    },
    "@tauri-apps/api": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=24"
  }
}
