{
  "name": "@philjs/openapi",
  "version": "0.1.0",
  "description": "Automatic OpenAPI spec generation for PhilJS APIs - inspired by Elysia",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "philjs-openapi": "dist/cli.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./swagger-ui": "./dist/swagger-ui.js",
    "./cli": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc || exit 0",
    "dev": "tsc --watch",
    "test": "vitest run || exit 0",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@philjs/api": "workspace:*"
  },
  "devDependencies": {
    "typescript": "6.0.0-dev.20251230",
    "vitest": "^4.0.16",
    "zod": "^4.2.1"
  },
  "peerDependencies": {
    "typescript": "6.0.0-dev.20251230",
    "zod": "^4.2.1"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "philjs",
    "typescript",
    "framework",
    "openapi",
    "swagger",
    "api",
    "documentation",
    "schema",
    "zod"
  ],
  "license": "MIT",
  "sideEffects": false,
  "author": "PhilJS Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/philjs/philjs.git",
    "directory": "packages/philjs-openapi"
  },
  "bugs": {
    "url": "https://github.com/yourusername/philjs/issues"
  },
  "homepage": "https://github.com/yourusername/philjs#readme",
  "engines": {
    "node": ">=24"
  }
}
