{
  "name": "@philjs/pdf",
  "version": "0.1.0",
  "description": "PDF generation and manipulation for PhilJS - HTML to PDF, templates, utilities",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./templates": {
      "types": "./dist/templates/index.d.ts",
      "default": "./dist/templates/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "lint": "eslint src/"
  },
  "keywords": [
    "philjs",
    "pdf",
    "pdf-generation",
    "puppeteer",
    "pdfkit"
  ],
  "author": "PhilJS Team",
  "license": "MIT",
  "dependencies": {
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.15.0",
    "puppeteer": "^22.6.0"
  },
  "devDependencies": {
    "@types/pdfkit": "^0.13.4",
    "tsup": "^8.5.1",
    "typescript": "^6.0.0",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "@philjs/core": "workspace:*"
  },
  "engines": {
    "node": ">=24"
  }
}
