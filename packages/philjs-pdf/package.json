{
  "name": "@philjs/pdf",
  "version": "0.1.0",
  "description": "PDF generation and manipulation for PhilJS - HTML to PDF, templates, utilities",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./templates": {
      "types": "./dist/templates/index.d.ts",
      "import": "./dist/templates/index.js",
      "require": "./dist/templates/index.cjs"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.cjs"
    }
  },
  "files": ["dist", "src"],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "lint": "eslint src/"
  },
  "keywords": ["philjs", "pdf", "pdf-generation", "puppeteer", "pdfkit"],
  "author": "PhilJS Team",
  "license": "MIT",
  "dependencies": {
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.15.0",
    "puppeteer": "^22.6.0"
  },
  "devDependencies": {
    "@types/pdfkit": "^0.13.4",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@philjs/core": ">=0.1.0"
  },
  "engines": {
    "node": ">=24"
  }
}
