{
  "name": "@philjs/plugin-tailwind",
  "version": "0.1.0",
  "description": "Automatic Tailwind CSS setup and optimization for PhilJS",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.js"
    },
    "./content-detector": {
      "types": "./dist/content-detector.d.ts",
      "import": "./dist/content-detector.js"
    },
    "./theme-generator": {
      "types": "./dist/theme-generator.d.ts",
      "import": "./dist/theme-generator.js"
    }
  },
  "files": [
    "dist",
    "templates",
    "examples",
    "README.md"
  ],
  "scripts": {
    "build": "tsc || exit 0",
    "dev": "tsc --watch",
    "test": "vitest run || exit 0",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "npm run typecheck || exit 0",
    "typecheck": "tsc --noEmit || exit 0",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "philjs",
    "typescript",
    "framework",
    "plugin",
    "tailwind",
    "tailwindcss",
    "css",
    "styling",
    "design-system",
    "utility-first",
    "jit",
    "dark-mode"
  ],
  "author": "PhilJS Team",
  "license": "MIT",
  "peerDependencies": {
    "@philjs/core": "workspace:*",
    "vite": "^7.3.0"
  },
  "dependencies": {
    "tailwindcss": "^4.1.18",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.5.6"
  },
  "devDependencies": {
    "@types/node": "^25.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "typescript": "6.0.0-dev.20251230",
    "vitest": "^4.0.16"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/philjs/philjs.git",
    "directory": "packages/philjs-plugin-tailwind"
  },
  "bugs": {
    "url": "https://github.com/yourusername/philjs/issues"
  },
  "homepage": "https://philjs.dev/plugins/tailwind",
  "sideEffects": false,
  "engines": {
    "node": ">=24"
  }
}
