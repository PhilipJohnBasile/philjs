{
  "name": "@philjs/rich-text",
  "version": "0.1.0",
  "description": "Rich text block editor for PhilJS - Notion-style blocks, slash commands, collaborative editing",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc || exit 0",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit || exit 0",
    "lint": "eslint src/ || exit 0",
    "test": "vitest run || exit 0"
  },
  "keywords": [
    "philjs",
    "typescript",
    "framework",
    "rich",
    "text",
    "rich-text",
    "editor",
    "blocks",
    "notion",
    "prosemirror"
  ],
  "author": "PhilJS Team",
  "license": "MIT",
  "peerDependencies": {
    "@philjs/core": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "6.0.0-dev.20251230",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=24"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/philjs/philjs.git",
    "directory": "packages/philjs-rich-text"
  }
}
