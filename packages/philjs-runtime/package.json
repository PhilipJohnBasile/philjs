{
  "name": "@philjs/runtime",
  "version": "0.1.0",
  "type": "module",
  "description": "PhilJS Runtime with Self-Healing capabilities - automatic error recovery, circuit breakers, hot-patching",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./self-healing": {
      "types": "./dist/self-healing/index.d.ts",
      "default": "./dist/self-healing/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/self-healing/index.ts --format esm --dts --out-dir dist/self-healing",
    "dev": "tsup src/self-healing/index.ts --watch",
    "test": "vitest"
  },
  "keywords": [
    "philjs",
    "runtime",
    "self-healing",
    "error-recovery",
    "circuit-breaker",
    "hot-patching",
    "resilience",
    "fault-tolerance"
  ],
  "author": "PhilJS Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.0.0",
    "tsup": "^8.5.1",
    "typescript": "6.0.0-dev.20251230",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=24"
  }
}

