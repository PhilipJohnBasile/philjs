{
  "name": "@philjs/shadcn",
  "version": "0.1.0",
  "description": "Native shadcn/ui components for PhilJS - beautiful, accessible components built with signals",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js"
    },
    "./form/*": {
      "types": "./dist/form/*.d.ts",
      "import": "./dist/form/*.js"
    }
  },
  "scripts": {
    "build": "tsc || exit 0",
    "dev": "tsc --watch",
    "test": "vitest run || exit 0",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@philjs/core": "workspace:*",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "6.0.0-dev.20251230",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@philjs/core": ">=0.1.0"
  },
  "keywords": [
    "philjs",
    "typescript",
    "framework",
    "shadcn",
    "ui",
    "components",
    "signals",
    "tailwind"
  ],
  "license": "MIT",
  "author": "PhilJS Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/philjs/philjs.git",
    "directory": "packages/philjs-shadcn"
  }
}
