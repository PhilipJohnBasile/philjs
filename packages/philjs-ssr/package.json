{
  "name": "@philjs/ssr",
  "version": "0.1.0",
  "description": "SSR streaming, loaders, actions, and resumability for PhilJS",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin @rollup/plugin-typescript || exit 0",
    "test": "vitest run || exit 0",
    "lint": "npm run typecheck || exit 0",
    "typecheck": "tsc --noEmit || exit 0"
  },
  "dependencies": {
    "@philjs/core": "workspace:*",
    "@philjs/router": "workspace:*"
  },
  "devDependencies": {
    "rollup": "^4.55.2",
    "typescript": "6.0.0-dev.20251230",
    "vitest": "^4.0.17"
  },
  "sideEffects": false,
  "license": "MIT",
  "author": "PhilJS Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/philjs/philjs.git",
    "directory": "packages/philjs-ssr"
  },
  "bugs": {
    "url": "https://github.com/yourusername/philjs/issues"
  },
  "homepage": "https://github.com/yourusername/philjs#readme",
  "keywords": [
    "philjs",
    "typescript",
    "framework",
    "ssr",
    "server-side-rendering",
    "streaming"
  ],
  "engines": {
    "node": ">=24"
  }
}
