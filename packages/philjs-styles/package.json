{
  "name": "@philjs/styles",
  "version": "0.1.0",
  "description": "Scoped styles, CSS Modules, and CSS-in-JS for PhilJS",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./css-modules": "./dist/css-modules.js",
    "./scoped": "./dist/scoped.js",
    "./css-in-js": "./dist/css-in-js.js",
    "./vite": "./dist/vite-plugin.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@philjs/core": "workspace:*"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.16",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "philjs",
    "css",
    "styles",
    "scoped",
    "css-modules",
    "css-in-js"
  ],
  "license": "MIT",
  "sideEffects": [
    "**/*.css"
  ],
  "author": "PhilJS Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/philjs.git",
    "directory": "packages/philjs-styles"
  },
  "bugs": {
    "url": "https://github.com/yourusername/philjs/issues"
  },
  "homepage": "https://github.com/yourusername/philjs#readme"
