{
  "name": "philjs-testing",
  "version": "1.0.0",
  "description": "Official testing library for PhilJS - render, queries, events, and utilities",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./vitest": {
      "types": "./dist/vitest.d.ts",
      "import": "./dist/vitest.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run --passWithNoTests",
    "lint": "eslint src"
  },
  "peerDependencies": {
    "philjs-core": ">=1.0.0"
  },
  "dependencies": {
    "@testing-library/dom": "^10.0.0",
    "pretty-format": "^29.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0",
    "philjs-core": "workspace:*"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": ["philjs", "testing", "test", "vitest", "testing-library"],
  "license": "MIT"
}
