{
  "name": "@philjs/testing",
  "version": "0.1.0",
  "description": "Official testing library for PhilJS - render, queries, events, and utilities",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./vitest": {
      "types": "./dist/vitest.d.ts",
      "import": "./dist/vitest.js"
    },
    "./jest": {
      "types": "./dist/jest.d.ts",
      "import": "./dist/jest.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run --passWithNoTests",
    "lint": "eslint src"
  },
  "peerDependencies": {
    "@philjs/core": "workspace:*"
  },
  "dependencies": {
    "@testing-library/dom": "^10.0.0",
    "pretty-format": "^29.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4",
    "@philjs/core": "workspace:*"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "philjs",
    "testing",
    "test",
    "vitest",
    "testing-library"
  ],
  "license": "MIT",
  "sideEffects": false,
  "author": "PhilJS Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/philjs.git",
    "directory": "packages/philjs-testing"
  },
  "bugs": {
    "url": "https://github.com/yourusername/philjs/issues"
  },
  "homepage": "https://github.com/yourusername/philjs#readme"
}
