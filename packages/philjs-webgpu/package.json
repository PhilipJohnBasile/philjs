{
  "name": "@philjs/webgpu",
  "version": "1.0.0",
  "description": "WebGPU Integration - GPU-accelerated rendering, compute shaders, parallel DOM diffing, and real-time effects",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --watch",
    "test": "vitest"
  },
  "keywords": [
    "philjs",
    "webgpu",
    "gpu",
    "compute-shaders",
    "rendering",
    "graphics",
    "wgsl",
    "parallel",
    "high-performance"
  ],
  "author": "PhilJS Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@webgpu/types": "^0.1.40",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
