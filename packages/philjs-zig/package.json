{
  "name": "@philjs/zig",
  "version": "0.1.0",
  "description": "Zig bindings for PhilJS - Ultra-fast low-level performance tooling (Bun-level speed)",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "philjs-zig": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./runtime": {
      "types": "./dist/runtime.d.ts",
      "import": "./dist/runtime.js"
    },
    "./wasm": {
      "types": "./dist/wasm.d.ts",
      "import": "./dist/wasm.js"
    }
  },
  "files": ["dist", "zig", "templates"],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "zig:build": "cd zig && zig build",
    "zig:test": "cd zig && zig build test"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "tsup": "^8.5.1",
    "typescript": "next",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "@philjs/core": "workspace:*"
  },
  "keywords": ["philjs", "zig", "performance", "wasm", "simd", "fast", "low-level", "bun", "runtime"],
  "license": "MIT",
  "author": "PhilJS Team",
  "engines": {
    "node": ">=24"
  }
}
