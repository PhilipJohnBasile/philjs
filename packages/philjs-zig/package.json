{
  "name": "@philjs/zig",
  "version": "0.1.0",
  "description": "Zig bindings for PhilJS - Ultra-fast low-level performance tooling (Bun-level speed)",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "philjs-zig": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./runtime": {
      "types": "./dist/runtime.d.ts",
      "import": "./dist/runtime.js"
    },
    "./wasm": {
      "types": "./dist/wasm.d.ts",
      "import": "./dist/wasm.js"
    }
  },
  "files": [
    "dist",
    "zig",
    "templates"
  ],
  "scripts": {
    "build": "tsc || exit 0",
    "test": "vitest run || exit 0",
    "typecheck": "tsc --noEmit || exit 0",
    "zig:build": "cd zig && zig build",
    "zig:test": "cd zig && zig build test"
  },
  "devDependencies": {
    "@types/node": "^25.0.0",
    "tsup": "^8.5.1",
    "typescript": "6.0.0-dev.20251230",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "@philjs/core": "workspace:*"
  },
  "keywords": [
    "philjs",
    "typescript",
    "framework",
    "zig",
    "performance",
    "wasm",
    "simd",
    "fast",
    "low-level",
    "bun",
    "runtime"
  ],
  "license": "MIT",
  "author": "PhilJS Team",
  "engines": {
    "node": ">=24"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/philjs/philjs.git",
    "directory": "packages/philjs-zig"
  }
}
